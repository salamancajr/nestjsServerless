{
  "compilerOptions": {
    "paths": {
      "mongoose": ["node_modules/mongoose"] // This mapping is relative to "baseUrl"
    },
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./"
  }
}
